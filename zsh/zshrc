# --- 1. 语言环境 ---
export LANG=zh_CN.UTF-8

# --- 2. 加载隐私配置 ---
[ -f ~/.zshrc.secret ] && source ~/.zshrc.secret

# --- 3. 插件行为微调 ---
# zsh-autocomplete
zstyle ':autocomplete:*' insert-unambiguous yes
zstyle ':autocomplete:*' widget-style menu-select

# --- 4. 通用别名 ---
alias cz="chezmoi"
alias cze="chezmoi edit"
