[user]
    name = @GIT_NAME@
    email = @GIT_EMAIL@

[init]
    defaultBranch = main

[core]
    # 根据系统自动切换换行符逻辑 (由 Chezmoi 动态注入)
    @GIT_CRLF@
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = auto-detection
    side-by-side = true
    line-numbers = true

[merge]
    conflictStyle = zdiff3

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

[alias]
    st = status
    co = checkout
    br = branch
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
